<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_invoice_supplier_transaction_type_form_inh">
            <field name="name">account.invoice.supplier.transaction.type.form.inh</field>
            <field name="model">account.move</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="control_invoice_number" attrs="{'required':[('type','=','in_invoice')]}"/>
                    <field name="vendor_invoice_number" attrs="{'required':[('type','=','in_invoice')],'invisible':[('type','=','out_invoice')]}"/>
                </xpath>
                <xpath expr="//field[@name='fiscal_position_id']" position="before">
                    <field name="transaction_type" attrs="{'required':[('type','!=','out_invoice')]}"/>
                    <field name="ajust_date" attrs="{'required':[('transaction_type', '=', '04-ajuste')],'invisible':[('transaction_type', '!=', '04-ajuste'),('type','=','out_invoice')]}"/>
                </xpath>
                </field>
        </record>
    </data>
</odoo>
